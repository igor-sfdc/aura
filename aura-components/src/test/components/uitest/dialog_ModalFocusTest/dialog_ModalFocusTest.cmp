<aura:component>
    <ui:dialogManager/>
    <aura:handler event="ui:closeDialog" action="{!c.closeDialog}"/>
    <ui:inputText aura:id="resultLabel" class="resultLabel" value=""/>
    <ui:button aura:id="1" class="launchDialogButton" label="Click for Modal!" press="{!c.openDialog}" />
    <ui:dialog clickOutToClose="false" aura:id="dialogBoxId" title="Bang!" description="Testing Modal Dialog Box" isModal="true">
        <span class="spantext">These are your choices:</span>
        <ol>
            <li tabindex="0" class="coffee">Coffee</li>
            <li class="tea">Tea</li>
        </ol>
        <a class="anchor">For more info, click here.</a>
    </ui:dialog>
</aura:component>