<aura:component access="GLOBAL" support="BETA" description="A loading spinner to be used while the real component body is being loaded">
    <aura:attribute access="GLOBAL" name="isVisible" type="Boolean" default="true"/>
    <aura:registerEvent access="GLOBAL" name="toggle" type="ui:toggleLoadingIndicator"/>
    <aura:handler name="toggle" action="{!c.toggleSpinner}"/>

    <div aura:id='spinner' role="alert" class="{!v.class + ' spinner ' + (v.isVisible == true ? '': 'hideEl')}">
        <div class="loading">
        	<ui:image class="spinner-img" src="/auraFW/resources/aura/images/spinner.gif" alt="Loading" />
        </div>
    </div>
</aura:component>