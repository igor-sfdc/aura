<aura:event type="COMPONENT" support="BETA" description="Event to trigger scroller scrolling">
	<aura:attribute name="destination" type="String" description="Destination of scrolling. Options are top|bottom|left|right|custom"/>
	<aura:attribute name="xcoord" type="Integer" description="X coordinate of custom scrolling"/>
	<aura:attribute name="ycoord" type="Integer" description="Y coordinate of custom scrolling"/>
	<aura:attribute name="time" type="Integer" default="0" description="Time (in milliseconds) to get to destination"/>
</aura:event>
