<aura:component extends="ui:image" implements="ui:asyncComponent"
                description="Encapsulates asynchronously loading of an image."
                support="BETA">
    <aura:attribute name="actualImageSrc" type="String" description="Actual image src attribute of the image"/>
    <aura:registerEvent name="load" type="ui:load"/>
    <aura:handler name="load" action="{!c.load}"/>
    
</aura:component>
