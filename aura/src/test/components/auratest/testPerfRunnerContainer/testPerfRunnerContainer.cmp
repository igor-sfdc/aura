<aura:component 
	model="java://org.auraframework.test.testsetrunner.TestSetRunnerModel" 
	controller="java://org.auraframework.test.testsetrunner.TestSetRunnerController">
	
<aura:attribute name="scope" type="String"/>

	<section class="content">
		<div class="menu">
			<p class="search-bar">
				<span>Search:</span>
				<input class="search" type="text" placeholder="Type to filter tests"/>
				<button class="select">
					<input type="checkbox" name="select"/>
					<span>Select all</span>
				</button>
				<button class="integ">
					<input type="checkbox" name="select"/>
					<span>Hide Integ</span>
				</button>
				<button class="failed">
					<input disabled="true" type="checkbox" name="select"/>
					<span>Show only failed</span>
				</button>
			</p>
			<button class="run">
				<span>Run!</span>
			</button>
		</div>
	</section>
</aura:component>
